      <%= label_tag "Sq Feet" %>
    </div>
    <div class="col-md-1">
    </div>
    <div class="col-md-1">

    </div>
    <div class="col-md-1">

    </div>
    <div class="col-md-4">

    </div>
    <div class="col-md-1">

    </div>
  </div>
  <div class="row">
  <div class="col-md-1">
    </div>
    <div class="col-md-1">
      <%= number_field_tag :min_sqft, params[:min_sqft], placeholder: "min", class: "form-control input-sm" %>
    </div>
    <div class="col-md-1">
      <%= number_field_tag :max_sqft, params[:max_sqft], placeholder: "max", class: "form-control input-sm" %>
    </div>
    <div class="col-md-1">
     <%= check_box_tag :cats, "YES", params[:cats] %><%= label_tag :cats %>
   </div>
   <div class="col-md-1">
    <%= check_box_tag :dogs, "YES", params[:dogs] %><%= label_tag :dogs %>
