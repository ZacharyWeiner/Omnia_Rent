    <%= form_tag posts_path, method: :get do %>
    <div class="row">
      <div class="col-md-1">
      
      </div>
      <div class="col-md-2">
        <%= label_tag "Price" %>
      </div>
      <div class="col-md-2">
        <%= label_tag :bedrooms %>
      </div>
      <div class="col-md-2">
        <%= label_tag :bathrooms %>
      </div>
      <div class="col-md-4">
        <%= label_tag :neighborhood %>
      </div>
      <div class="col-md-1">
      
      </div>
    </div>
    <div class="row">
      <div class="col-md-1">
        
      </div>
      <div class="col-md-1">
        <%= text_field_tag :min_price, params[:min_price], placeholder: "min $", class: "form-control input-sm" %>
